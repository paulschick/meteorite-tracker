    "paths": {
      "grid-column-observer": [
        "dist/grid-column-observer/grid-column-observer",
        "dist/grid-column-observer"
      ],
      "event-bus": [
        "dist/event-bus/event-bus",
        "dist/event-bus"
      ]
    }
  }
}